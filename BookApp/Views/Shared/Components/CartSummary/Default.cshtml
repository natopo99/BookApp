
@{
}
@model Basket
<div class="float-end">
    @if (Model.Items.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your cart:</b>
            @Model.Items.Sum(x => x.Quantity) item(s) @*calculate the numebr of items in the cart*@
            @Model.CalculateTotal().ToString("c")
        </small>
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Cart" 
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()"> 
        <i class="fa fa-shopping-cart"></i> @*this is the shopping cart icon*@
    </a>
</div>